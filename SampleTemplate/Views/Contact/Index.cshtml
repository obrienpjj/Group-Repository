@model SampleTemplate.Models.ContactModel
@{
    ViewBag.Title = "Index";
}
<h2 class="big">Contact Us</h2>
<h5 class="heading">We would love to hear from you.</h5>
@using (Html.BeginForm("Index", "Contact", FormMethod.Post))
{
    <div class="contactForm">
        <p>
            @Html.ValidationSummary(false, "", new { @style = "color:red" })
        </p>
        <p class="newline">
            <span class="newline">
                @Html.LabelFor(c => c.Name, htmlAttributes: new { @class = "formText" })
                @Html.TextBoxFor(c => c.Name, htmlAttributes: new { @class = "editText" })
                (Optional)
            </span>

        </p>
        <p>
            <span class="newline">
                @Html.LabelFor(c => c.Email, htmlAttributes: new { @class = "formText" })
                @Html.TextBoxFor(c => c.Email, htmlAttributes: new { @class = "editText" })
                (Required)
            </span>

        </p>
        <p>
            <span class="newline">@Html.LabelFor(c => c.Comments, htmlAttributes: new { @class = "formText" })</span>
            @Html.TextAreaFor(c => c.Comments, new { @rows = 4, @cols = 85 })
        </p>
        <p>
            <input class="myButton" type="submit" value="Submit" />
        </p>
        <img id="contactImage" alt="Get in Touch!" src="~/Content/Images/getintouch.png" width="800" />
    </div>
}