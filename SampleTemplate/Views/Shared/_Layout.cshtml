<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
   <link rel="stylesheet" type="text/css" href="~/Content/Styles.css" />
</head>
<body>
    <div id="wrapper">
        <header>
            <nav>
                <ul>
                    @*Home is text to be visible, Index is the ActionResult and Home is the Controller*@
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Login", "Login", "User")</li>
                    <li>@Html.ActionLink("Register", "Index", "User")</li>
                    <li>@Html.ActionLink("Studios", "Index", "Studios")</li>
                    <li>@Html.ActionLink("About Us", "Index", "About")</li>
                    <li>@Html.ActionLink("Contact Us", "Index", "Contact")</li>
                    <li>@RenderPage("LoginRegister.cshtml")</li>
                </ul>
            </nav>
        </header>
        
        <main>
            @RenderBody()
            
            @*@RenderSection("logged", false)*@

        </main>
   
        <footer>
            <p>&copy; @DateTime.Now.Year - Legacy Studios</p>
            <hr />
        </footer>
    </div>

</body>
</html>